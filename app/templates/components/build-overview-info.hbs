<div class="">
  <div class="flex align-center f2 lh-1 text-weight-semibold mb-1">
    <div class="text-light">
      Build <span class="text-mono text-dark mr-1">{{build.buildNumber}}</span>
    </div>
    {{build-info-dropdown build=build}}
  </div>
  <div class="grid col-auto gap-1 align-center">
    {{#if build.commit}}
      {{#if build.isPullRequest}}
        {{inline-svg "pull-request-icon"}}
        <span class="text-weight-semibold">#{{build.pullRequestNumber}}</span>
        <a href="{{build.repo.htmlUrl}}/pull/{{build.pullRequestNumber}}" class="no-wrap truncate text-weight-semibold">{{build.pullRequestTitle}}</a>
      {{else}}
        {{inline-svg "commit-icon"}}
        <code class="truncate">
          {{build.branch}}
        </code>
        {{#if build.isGithubLinked}}
          <a class="f6 text-mono" href="{{build.repo.htmlUrl}}/commit/{{build.commit.sha}}">{{build.commit.shaShort}}</a>
        {{else}}
          <span class="f6 text-mono">{{build.commit.shaShort}}</span>
        {{/if}}
      {{/if}}
    {{/if}}
  </div>
</div>

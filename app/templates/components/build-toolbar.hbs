<header class="build-toolbar position-fixed t-0 vw-full z-3 flex justify-between align-center px-2 bg-gray-000 border-bottom border-gray-100">
  <div class="flex align-center">
    {{#link-to "index"}}
      <figure class="svg-container mr-2">
        {{inline-svg "percy-logo-on-light"}}
      </figure>
    {{/link-to}}
    <div class=" flex align-center bg-purple-300 f6 rounded px-1 py-sm hide-on-mobile">
      {{#link-to "organization" organization class="text-mono text-purple truncate truncate-target hide-on-tablet"}}{{organization.name}}{{/link-to}}
      <span class="text-weight-semibold mx-sm hide-on-tablet">/</span>
      {{#link-to "organization.project" organization project class="text-mono text-purple truncate truncate-target" data-test-build-toolbar-project-link=true}}{{project.name}}{{/link-to}}
    </div>
  </div>
  {{trial-bar organization=organization}}
  <div class="flex align-center">
    {{#if (is-admin)}}
      {{#if build.isFinished}}
        <button type="button" class="btn btn-square hint--bottom hint--rounded hint--bounce" aria-label="Toggle diffs (d)" {{action toggleShowDiffs}} data-test-toggle-diffs-button>
          <figure class="svg-container">
            {{#if showDiffs}}
              {{inline-svg "diff-toggle-on"}}
            {{else}}
              {{inline-svg "diff-toggle-off"}}
            {{/if}}
          </figure>
        </button>
      {{/if}}
    {{/if}}
    {{approval-section build=build createReview=createReview}}
  </div>
</header>

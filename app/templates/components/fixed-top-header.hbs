<div class="container">
  <div class="Header Header--small Header--fixedTop">
    <div class="u-pull-left">
      {{#link-to "index"}}
        <img src="/images/percy.svg" class="Header-logo u-pull-left">
        <div class="Header-title u-pull-left">
          Percy
        </div>
      {{/link-to}}
    </div>
    <div class="u-pull-left">
      {{#if session.isAuthenticated}}
        {{organizations/switcher-nav currentOrganization=currentOrganization}}
      {{/if}}
    </div>
    {{#if currentOrganization.subscription.isTrialOrFree}}
      <div class="Header-trialBar">
        {{#if currentOrganization.subscription.plan.isFree}}
          <strong>Your trial has expired.</strong>
        {{else}}
          {{#if (eq currentOrganization.subscription.trialDaysRemaining 0)}}
            <strong>Trial ends today!</strong>
          {{else}}
            <strong>{{pluralize currentOrganization.subscription.trialDaysRemaining "day"}}</strong> left in trial.
          {{/if}}
        {{/if}}
        {{#link-to "organizations.organization.billing" currentOrganization.slug}}See plans &raquo;{{/link-to}}
      </div>
    {{/if}}
    {{#if session.isAuthenticated}}
      {{nav-menu user=session.data.authenticated.user currentOrganization=currentOrganization}}
    {{else}}
      {{nav-menu}}
    {{/if}}
  </div>
  <div class="HeaderSpacer"></div>
</div>

{{#if (eq success 'true')}}

  {{#status-panel
    inlineSvgName="thumbs-up-large-icon"
    mainText="Success!"
    secondaryText="Your password has been updated"
  }}
    {{#if currentUser}}
      {{#link-to 'settings.profile' classNames='Button Button--primary test-password-updated-settings-link'}}Continue to Profile{{/link-to}}
    {{else}}
      {{#link-to 'login' classNames='Button Button--primary test-password-updated-signin-link'}}Continue to Sign In{{/link-to}}
    {{/if}}
  {{/status-panel}}

{{else}}

  {{#status-panel
    inlineSvgName="error-large-icon"
    mainText="Something went wrong!"
    secondaryText="There was a problem changing your password. Please try again or contact support."
  }}
    {{#if currentUser}}
      {{#link-to 'settings.profile' classNames='Button Button--primary test-password-updated-settings-link'}}Continue to Profile{{/link-to}}
    {{else}}
      {{#link-to 'login' classNames='Button Button--primary test-password-updated-signin-link'}}Continue to Sign In{{/link-to}}
    {{/if}}
  {{/status-panel}}

{{/if}}
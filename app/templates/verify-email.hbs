{{fixed-top-header}}

<div class="container-full container-vh bg-white-pattern flex align-center justify-center">
  {{#if model.success}}
    {{#status-panel
      inlineSvgName="thumbs-up-large-icon"
      mainText="Success!"
      secondaryText="Your email address is now verified"
    }}
      {{#if session.currentUser}}
        {{#link-to 'settings.profile' classNames='Button Button--primary test-verify-email-profile-link'}}Continue to Profile{{/link-to}}
      {{else}}
        {{#link-to 'login' classNames='Button Button--primary test-verify-email-signin-link'}}Continue to Sign In{{/link-to}}
      {{/if}}
    {{/status-panel}}
  {{else}}
    {{status-panel
      inlineSvgName="error-large-icon"
      mainText="Uh Oh..."
      secondaryText=(or model "Something went wrong. Please try again or contact support")
    }}
  {{/if}}
</div>

{{main-footer}}
